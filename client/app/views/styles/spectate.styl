@import 'nib'

#spectate
	#question
		position absolute
		width 100%
		font-size 5em
		top 1%

		h1
			margin 0

	#answers
		
		position absolute
		width 60%
		left 20%
		top 4em
		font-size 3em
		tr
			display none

			&.answered
				display table-row

		.table-striped > tbody > tr:nth-child(odd) > td
			background-color rgba(255,255,255,0.5)

		.numberOfPeople
			width 2em
			text-align right

	#strikes
		position absolute
		width 100%
		bottom 5%

	#question, #answers, #strikes
		display none

	&.phase-face-off, &.phase-team, &.phase-round-won
		#question, #answers, #strikes
			display block


	// &.phase-face-off
	#title
		width 100%
		text-align center
		font-size 5em
		font-weight bold

	.background
		z-index -1
		position absolute
		top 0
		height 100%
		width 100%
		overflow hidden
	#teams
		height 100%
		.row
			height 100%
		.team-one, .team-two
			position absolute
			width 50%
			height 100%
		.team-one
			bottom 0
			left 0
			div
				position absolute
				bottom 2em
				left 2em

		.team-two
			bottom 0
			right 0
			div
				position absolute
				bottom 2em
				right 2em

	&.phase-team, &.phase-round-won
		#teams
			.team-one, .team-two
				&.turn
					z-index 50
					animation-duration 3s
					animation-name gotTurn
					width 100%

				&.noTurn
					z-index 1000
					animation-duration 3s
					animation-name lostTurn
					height 20%
					width 50%
		// 	display none

		// .team-two
		// 	display none

@keyframes gotTurn
	from
		width 50%
	to
		width 100%

@keyframes lostTurn
	from
		width 50%
		height 100%
	to
		height 20%
		width 50%
